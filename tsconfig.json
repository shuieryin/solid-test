{
	"compilerOptions": {
		"isolatedModules": false,
		"esModuleInterop": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"target": "ESNext",
		"skipLibCheck": true,
		"moduleResolution": "Node",
		"module": "ESNext",
		"allowSyntheticDefaultImports": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"allowJs": true,
		"lib": [
			"ESNext",
			"DOM"
		],
		"rootDir": "src"
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	},
	"include": ["./src", "./storybook"],
	"exclude": ["./node_modules", "./dist"]
}